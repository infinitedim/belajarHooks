{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:prettier/recommended",
    "eslint:recommended"
  ],
  "overrides": [
    {
      "files": ["*.js", "*.jsx"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": ["./vite.config.js"]
  },
  "plugins": ["react"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": false,
        "endOfLine": "auto",
        "tabWidth": 2,
        "semi": true
      }
    ],
    "import/no-extraneous-dependencies": "off",
    "no-alert": "off"
  }
}
